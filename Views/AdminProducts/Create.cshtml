@model AMZN.Models.Product.ProductCreateViewModel

@{
    ViewData["Title"] = "Create product";
}

<div class="text-center">
    <h1 class="display-4">Create product</h1>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success" role="alert">@TempData["Success"]</div>
}

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
}


<form asp-action="Create" asp-controller="AdminProducts" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Form.Title" class="form-control" />
        <span asp-validation-for="Form.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Category</label>
        <select asp-for="Form.CategoryId" class="form-select">
            <option value="">-- select --</option>
            @foreach (var c in Model.Categories)
            {
                <option value="@c.Id">@c.Name</option>
            }
        </select>
        <span asp-validation-for="Form.CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="Form.Description" class="form-control"></textarea>
        <span asp-validation-for="Form.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Current price</label>
        <input asp-for="Form.CurrentPrice" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Form.CurrentPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Original price</label>
        <input asp-for="Form.OriginalPrice" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Form.OriginalPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Primary image</label>
        <input asp-for="Form.PrimaryImage" class="form-control" type="file" accept=".jpg,.jpeg,.png,.webp" />
        <span asp-validation-for="Form.PrimaryImage" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Gallery images (max 10)</label>
        <input asp-for="Form.Images" class="form-control" type="file" multiple accept=".jpg,.jpeg,.png,.webp" />
        <span asp-validation-for="Form.Images" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>

</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Ограничение на 10 img's для удобства,сервер все равно проверит
        const input = document.querySelector('input[name="Form.Images"]');
        if (input) {
            input.addEventListener('change', () => {
                if (input.files && input.files.length > 10) {
                    alert("Too many files. Max 10.");
                    input.value = "";
                }
            });
        }
    </script>
}